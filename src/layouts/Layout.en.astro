							closeMenu();
						};
						window.mobileMenuListeners.navLinks[index] = closeLinkHandler;
						link.addEventListener('click', closeLinkHandler);
					});

					console.log('✅ Mobile menu event listeners successfully attached');
				} catch (error) {
					console.error('❌ Error attaching event listeners:', error);
				}

				const languageSwitcher = document.querySelector('.language-switcher');
				if (languageSwitcher) {
					languageSwitcher.querySelectorAll('a').forEach((link, index) => {
						const switchLangHandler = () => {
							console.log('🌐 Language switch clicked');
							closeMenu();
							
							setTimeout(() => {
								console.log('🔄 Scheduling menu reset after language switch');
								setupMobileMenu();
							}, 300);
						};

						window.mobileMenuListeners.languageSwitcher[index] = switchLangHandler;
						link.addEventListener('click', switchLangHandler);
					});
				}
			}

			// Initial setup
			try {
				setupMobileMenu();
				console.log('✅ Initial mobile menu setup complete');
			} catch (error) {
				console.error('❌ Initial setup failed:', error);
			}

			// Event listeners for Astro navigation
			document.addEventListener('astro:page-load', () => {
				console.log('🔄 Astro page load triggered');
				setupMobileMenu();
			});

			document.addEventListener('astro:after-swap', () => {
				console.log('🔄 Astro after swap triggered');
				setupMobileMenu();
			});

			// Global error tracking
			window.addEventListener('error', (event) => {
				console.error('🚨 Unhandled error:', event.error);
			});
		</script>
