	}

	.contact-section {
		margin-top: 4rem;
		width: 100%;
	}

	.contact-content {
		text-align: center;
		max-width: 800px;
		margin: 0 auto;
	}

	.contact-info {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.5rem;
		margin-top: 2rem;
		width: 100%;
	}

	.contact-card {
