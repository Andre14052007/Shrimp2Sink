<style>
	.hero {
		text-align: center;
		padding: 6rem 2rem;
		background: var(--gradient);
		margin: -2rem -2rem 2rem -2rem;
		border-radius: 16px 16px 0 0;
		color: rgb(var(--text-light));
		position: relative;
		overflow: hidden;
	}

	.hero-content {
		position: relative;
		z-index: 1;
		max-width: 800px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1.5rem;
		line-height: 1.2;
		color: rgb(var(--text-light));
	}

	.subtitle {
		font-size: 1.25rem;
		color: rgba(255,255,255,0.9);
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.main-content {
		padding: 2rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-line {
		width: 60px;
		height: 4px;
		background: var(--gradient);
		margin: 1rem auto;
		border-radius: 2px;
	}

	.text-content {
		max-width: 800px;
		margin: 0 auto;
		text-align: center;
	}

	.text-content p {
		font-size: 1.1rem;
		line-height: 1.8;
		color: rgb(var(--text));
	}

	.objectives-section {
		padding: 4rem 2rem;
		background: linear-gradient(180deg, var(--color-bg), rgba(var(--accent-light), 0.05));
	}

	.objectives-container {
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0;
	}

	.sdg-banner {
		background: white;
		padding: 3rem;
		border-radius: 2rem;
		box-shadow: 0 20px 40px rgba(var(--accent-light), 0.15);
		margin-bottom: 3rem;
		position: relative;
		overflow: hidden;
	}

	.sdg-banner::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 6px;
		background: linear-gradient(90deg, rgb(var(--accent)), rgba(var(--accent-light), 0.5));
	}

	.sdg-content {
		display: flex;
		align-items: center;
		gap: 4rem;
		position: relative;
	}

	.sdg-icon-wrapper {
		flex: 0 0 auto;
		width: 220px;
		height: 220px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(145deg, rgba(var(--accent-light), 0.1), rgba(var(--accent-light), 0.05));
		border-radius: 2rem;
		padding: 2rem;
		transition: all 0.4s ease;
	}

	.sdg-icon-wrapper:hover {
		transform: translateY(-5px) rotate(5deg);
		box-shadow: 0 15px 30px rgba(var(--accent-light), 0.2);
	}

	.sdg-icon {
		width: 100%;
		height: 100%;
		object-fit: contain;
		filter: drop-shadow(0 4px 8px rgba(var(--accent-light), 0.2));
	}

	.sdg-text {
		flex: 1;
	}

	.sdg-title {
		margin-bottom: 1.5rem;
	}

	.sdg-title .highlight {
		display: inline-block;
		color: rgb(var(--primary));
		font-size: 2.5em;
		font-weight: 800;
		margin-right: 1rem;
		letter-spacing: -0.02em;
	}

	.sdg-title h3 {
		display: inline-block;
		margin: 0;
		font-size: 1.8em;
		color: rgb(var(--primary));
		font-weight: 600;
	}

	.sdg-text p {
		font-size: 1.2em;
		line-height: 1.7;
		color: var(--color-text);
		margin: 0;
		opacity: 0.9;
	}

	.objectives-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1.5rem;
		margin-top: 2rem;
	}

	.objective-card {
		background: white;
		padding: 1.75rem;
		border-radius: 16px;
		box-shadow: var(--card-shadow);
		text-align: center;
		transition: var(--transition);
	}

	.objective-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 24px rgba(var(--primary), 0.15);
	}

	.objective-icon {
		font-size: 2.25rem;
		margin-bottom: 1rem;
		color: rgb(var(--primary));
	}

	.objective-card h3 {
		font-weight: 600;
		color: rgb(var(--primary));
		margin-bottom: 0.5rem;
		font-size: 1.25rem;
	}

	.objective-card p {
		color: rgb(var(--text));
		font-size: 1rem;
		line-height: 1.5;
		margin: 0;
	}

	.contact-card .button {
