---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Resultados da Investigação">
	<h1>Resultados Experimentais</h1>

	<div class="card">
		<h2>Eficiência de Filtração</h2>
		<div class="result-data">
			<div class="stat">
				<h3>-</h3>
				<p>Remoção de Metais Pesados</p>
			</div>
			<div class="stat">
				<h3>-</h3>
				<p>Redução de Turbidez</p>
			</div>
			<div class="stat">
				<h3>-</h3>
				<p>Remoção de Poluentes Orgânicos</p>
			</div>
		</div>
	</div>

	<div class="card">
		<h2>Principais Conclusões</h2>
		<ul class="findings-list">
			<li>Em estudo</li>
		</ul>
	</div>
</Layout>

<style>
	.result-data {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
		margin: 2rem 0;
	}
	.stat {
		text-align: center;
	}
	.stat h3 {
		color: rgb(var(--primary));
		font-size: 2.5rem;
		margin: 0;
	}
	.findings-list {
		list-style-type: none;
		padding: 0;
	}
	.findings-list li {
		margin-bottom: 1rem;
		padding-left: 1.5rem;
		position: relative;
	}
	.findings-list li::before {
		content: "•";
		color: rgb(var(--primary));
		font-weight: bold;
		position: absolute;
		left: 0;
	}
</style>