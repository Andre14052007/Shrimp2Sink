---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Linha do Tempo">
    <div class="hero">
        <div class="hero-content">
            <h1>Linha do Tempo do Projeto</h1>
            <p class="subtitle">Principais marcos e eventos em nossa jornada</p>
        </div>
    </div>

    <div class="main-content">
        <section class="timeline">
            <div class="timeline-entry">
                <h3>Marco 1</h3>
                <p>Descrição do marco 1.</p>
            </div>
            <div class="timeline-entry">
                <h3>Marco 2</h3>
                <p>Descrição do marco 2.</p>
            </div>
            <!-- Adicione mais marcos conforme necessário -->
        </section>
    </div>

    <section class="cta-section">
        <div class="cta-content">
            <h2>Quer saber mais?</h2>
            <p>Entre em contato conosco para mais informações sobre nosso projeto.</p>
        </div>
    </section>
</Layout>